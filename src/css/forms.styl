form
  position relative
  font-size 36px
  display flex
  flex-direction column
  width 100%
  padding 10px
label
  margin 10px 0
  padding 5px
  display block
  background #DDD
  min-width 40px
input[type="radio"]
  font-size 28px
  padding 5px
input[type="text"], input[type="number"]
  padding 5px
  margin-right 10px
  font-size 28px
textarea
  font-size 36px
  display block
  margin 10px
.inputGroup
  display flex
  flex-direction column
  flex-wrap wrap
  position relative
  justify-content flex-start
  align-content stretch
  align-items flex-start
  width 100%
  > *
    order 0
    flex 0 1 auto
    align-self auto
.buttonGroup
  flex-grow 0
  box-sizing border-box
  padding 10px
  text-align right
  button
    font-size 20px
    margin 0 10px
    border 0
    border-radius 4px
    padding 10px 30px
    text-transform uppercase
    &.save
      background #139148
      color white
.radioGroup
  label
    display flex
    justify-content space-between
    align-items center

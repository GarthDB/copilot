form
  position relative
  display flex
  justify-content space-around
  align-items stretch
  input, button, textarea
    &:focus
      box-shadow 0px 0px 1px 1px #2CB0D5
      outline 0
  button
    width 110px
    height 110px
    border-radius 55px
    border none
    font-size 26px
    font-weight bold
    text-transform lowercase
    cursor pointer
    box-sizing border-box
    &.cancel
      color #5E8C97
      background url('../img/cancel.svg') no-repeat center 10px #CEDCE0
      padding-top 26px
    &.save
      color #EB2027
      background url('../img/save.svg') no-repeat center 18px #CEDCE0
      padding-top 5px
  .buttonGroup
    display flex
    flex-direction column
    justify-content space-around
    align-items center
  .radioGroup
    width 100%
    label
      display block
      position relative
      padding 10px
      height 40px
      box-sizing border-box
      background #CEDCE0
      border-bottom 6px solid white
      font-size 15px
    span
      display block
      width 100%
      box-sizing border-box
    input
      position absolute
      right 0
      top 0
      height 100%
      border-left 6px solid white

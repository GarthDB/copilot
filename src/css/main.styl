body, html
  height 100%
body
  font-family 'Source Sans Pro', sans-serif
  > svg
    display: none;
main
  display flex
  flex-direction column
  height 100%
  align-content stretch
.clock
  height 33vh
  background #1A1A1A
  color #F2F2F2
  display flex
  align-items stretch
  transition height 0.25s ease-out
  & > div
    box-sizing border-box
    padding 20px
    width 100%
  .timeContainer
    display flex
    align-items center
    svg
      width 100%
      height 100%
  .day
    text-transform uppercase
  .date
    text-transform uppercase
  .dateContainer
    display flex
    justify-content center
    flex-direction column
    font-size 60px
.healthcareportal
  flex-grow 1
  height 33vh
  background #81BECC
  position relative
  transition 1s all
  display flex
  flex-direction column
  nav
    top 0
    bottom 0
    left 0
    right 0
  ul
    display flex
    align-items stretch
    height 33vh
    transition height 0.25s ease-out
  li
    width 100%
    text-align center
    display block
    position relative
  a
    position absolute
    bottom 20px
    left 0
    width 100%
    text-transform uppercase
    text-decoration none
    color #81BECC
  .icon
    width 100%
    height 100%
    background-size contain
    background-repeat no-repeat
    background-position center
    position absolute
  form
    background white
    flex-grow 1
.check_bg
  .icon
    background-image url('/img/check_bg.svg')
.pump
  .icon
    background-image url('/img/pump.svg')
.carbs
  .icon
    background-image url('/img/carbs.svg')
.champion
  .icon
    background-image url('/img/champion.svg')
.view_graph
  .icon
    background-image url('/img/view_graph.svg')
.view_log
  .icon
    background-image url('/img/view_log.svg')
.bgreading
  font-size 100px
.bg.urgent_high, .bg.high
  background #FFFD38
  color black
  .delta, .range
    color #f00
.bg.target
  color #009245
  background #9ACB9B
  .timeago
    color white
.bg.low, .bg.urgent_low
  background #E82430
  color white
  .bgDetailsContainer
    color black
  .timeago
    color white
.formOpen
  .bg
    min-height 200px
  .healthcareportal
    height auto
    min-height 33vh
    ul
      height 150px
  .clock
    height 0
    overflow hidden
.bg
  display flex
  min-height 33vh
  & > div
    box-sizing border-box
    padding 20px
    width 100%
  .range
    text-transform uppercase
.bgContainer
  display flex
  align-items center
  text
    font-weight 900
    fill currentColor
  path
    fill currentColor
.bgDetailsContainer
  display flex
  flex-direction column
  justify-content center
  > div
    margin 10px 0
  .range
    font-size 48px
  .timeago
    margin-right 20px
  .changeContainer
    display flex
    align-items center
    font-size 30px
  .details
    font-size 20px
    font-style italic
@media only screen and (min-width: 800px)
  .clock .dateContainer
    font-size 72px
  .bgDetailsContainer
    .range
      font-size 70px
    .details
      font-size 30px
@import forms
